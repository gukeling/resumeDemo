# For advice on how to change settings please see
# http://dev.mysql.com/doc/refman/5.6/en/server-configuration-defaults.html
# *** DO NOT EDIT THIS FILE. It's a template which will be copied to the
# *** default location during install, and will be replaced if you
# *** upgrade to a newer version of MySQL.

[client]
default-character-set=utf8

[mysqld]
server-id=2 # other server id [update]
log-bin=mysql-bin
auto-increment-increment=2 # begin increment number [update]
auto-increment-offset=2 # increment offset number [update]
replicate-do-db=decorationerp
log_slave_updates=1 # up down slave server update data [update]

datadir=/home/mysql/
socket=/home/mysql/mysql.sock

#skip-external-locking
#skip-name-resolve
max_allowed_packet = 32M
table_open_cache = 1024
sort_buffer_size = 2M
join_buffer_size = 1M

net_buffer_length = 1M
read_buffer_size = 2M
read_rnd_buffer_size = 16M
myisam_sort_buffer_size = 128M
thread_cache_size = 300
query_cache_size = 256M
query_cache_limit = 2M

thread_concurrency = 4
wait_timeout = 120
max_connections = 5000
max_connect_errors = 6000

character_set_server=utf8
character_set_client=utf8
collation-server=utf8_general_ci
lower_case_table_names=1

long_query_time = 3

innodb_buffer_pool_size = 8G
innodb_additional_mem_pool_size = 64M

innodb_log_file_size = 64M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 1
innodb_lock_wait_timeout = 50

[mysqld_safe]
open-files-limit = 8192

[mysql]
default-character-set=utf8
